# $Id: Makefile,v 1.10 2006-12-10 12:42:47 nicm Exp $

CLEANFILES= *~

TESTFILES= account.test macros.test options.test proxy.test nested.test \
	   size.test attachment.test

TARGETS= 
.for n in ${TESTFILES}
TARGETS+= ${n}
${n}:
		@echo ${n}:
		@awk -v CMD="../fdm -vvvnf /dev/stdin" -v DEBUG=${DEBUG} \
			-f test.awk ${n}
.endfor

.MAIN:		all
.PHONY: 	regress clean ${TARGETS}
.PRECIOUS: 	${TARGETS}

all:		regress

regress:	${TARGETS}

clean:
		rm -f ${CLEANFILES}
