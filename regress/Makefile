# $Id: Makefile,v 1.13 2007-06-29 21:28:43 nicm Exp $

CLEANFILES= *~

TESTFILES= account.test macros.test options.test proxy.test nested.test \
	   size.test attachment.test time.test

TARGETS=
.for n in ${TESTFILES}
TARGETS+= ${n}
${n}:
		@echo ${n}:
		@HOME=. awk -v CMD="../fdm -vvvnf /dev/stdin" \
			-v DEBUG=${DEBUG} -f test.awk ${n}
.endfor

.MAIN:		all
.PHONY: 	regress clean ${TARGETS}
.PRECIOUS: 	${TARGETS}

all:		regress

regress:	${TARGETS}

clean:
		rm -f ${CLEANFILES}
